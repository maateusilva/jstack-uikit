{
  "name": "@jstck/ui",
  "private": false,
  "version": "0.0.15",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.mjs",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/src/index.mjs",
      "require": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.mjs"
    },
    "./styles.css": "./dist/src/styles/index.css",
    "./utils": {
      "import": "./dist/src/utils.mjs",
      "require": "./dist/src/utils.js",
      "types": "./dist/src/utils.d.ts",
      "default": "./dist/src/utils.mjs"
    },
    "./tailwind-preset": {
      "import": "./dist/tailwind.config.mjs",
      "require": "./dist/tailwind.config.js",
      "types": "./dist/tailwind.config.d.ts",
      "default": "./dist/tailwind.config.mjs"
    }
  },
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "build:storybook": "storybook build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.416.0",
    "tailwind-merge": "^2.4.0"
  },
  "peerDependencies": {
    "react": ">=16.8",
    "react-dom": ">=16.8",
    "zod": ">=3"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.2.6",
    "@storybook/addon-themes": "^8.2.6",
    "@storybook/blocks": "^8.2.6",
    "@storybook/react": "^8.2.6",
    "@storybook/react-vite": "^8.2.6",
    "@storybook/test": "^8.2.6",
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.19",
    "eslint": "8",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-storybook": "^0.8.0",
    "postcss": "^8.4.40",
    "storybook": "^8.2.6",
    "tailwindcss": "^3.4.7",
    "tailwindcss-animate": "^1.0.7",
    "tsup": "^8.2.3",
    "typescript": "^5.2.2",
    "vite": "^5.3.4"
  }
}
